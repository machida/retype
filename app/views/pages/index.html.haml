- content_for :page_title do
  Listing pages

.common-first-actions
  %ul.common-first-actions__items.is-inline-blocks
    %li.common-first-actions__item
      = link_to new_site_page_path, :class => 'btn btn-primary' do
        %i.fa.fa-plus
        New Page

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Title
        %th Template
        %th Path
        %th Data
        %th Preview
        %th
        %th
        %th

    %tbody
      - @pages.each do |page|
        %tr
          %td= page.title
          %td= page.template
          %td= page.path
          %td= page.data
          %td= link_to 'Preview', preview_site_page_path(@site, page), target: '_blank'
          %td= link_to 'Show', site_page_path(@site, page)
          %td= link_to 'Edit', edit_site_page_path(@site, page)
          %td= link_to 'Destroy', site_page_path(@site, page), :data => { confirm: 'Are you sure?' }, :method => :delete
