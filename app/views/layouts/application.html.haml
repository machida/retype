!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %title Starter Template for Bootstrap
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}

    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      = javascript_include_tag "https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js", "https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"

    = stylesheet_link_tag    "application", :media => "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags

    - if browser.ie8?
      = stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css", media: "all"
      = javascript_include_tag "//html5shiv.googlecode.com/svn/trunk/html5.js"
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/selectivizr/1.0.2/selectivizr-min.js"
      = respond_include_tags
      = javascript_include_tag "oulu-ie8"

    - if browser.ie9?
      = javascript_include_tag "oulu-ie9"

  %body{class: "is-#{page_slug} #{browser}"}
    .navbar
      .container
        .navbar-header
          %button.navbar-toggle{:type => "button", :data => {:toggle => "collapse", :target => ".navbar-collapse"} }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'ReType', root_path, :class => "navbar-brand"
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li{class: "#{'active' if params[:controller] == 'sites'}"}
              = link_to 'Sites', sites_path

          %ul.nav.navbar-nav.navbar-right
            - if current_user
              %li
                = link_to edit_user_password_path do
                  %span.glyphicon.glyphicon-user
                  = current_user.email
              %li
                = link_to destroy_user_session_path, method: :delete, data: {confirm: 'Are you sure?'}, class: 'navbar-link' do
                  %span.glyphicon.glyphicon-log-out
                  = t(:logout)
            - else
              %li
                = link_to new_user_session_path, class: 'navbar-link' do
                  %span.glyphicon.glyphicon-log-in
                  = t(:login)
    .container
      - flash.each do |name, msg|
        = content_tag :div, :class => "alert alert-#{name == :error ? "danger" : "success" } alert-dismissable" do
          %button.close{:type => "button", :data => {:dismiss => "alert"}, :aria => {:hidden => "true"} } &times;
          = msg
    = yield
