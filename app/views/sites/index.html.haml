- content_for :page_title do
  Listing sites

.common-first-actions
  %ul.common-first-actions__items.is-inline-blocks
    %li.common-first-actions__item
      = link_to new_site_path, :class => 'btn btn-primary' do
        %i.fa.fa-plus
        Add Site
.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th.is-vertical-center Name
        %th.is-vertical-center Theme
        %th.is-vertical-center
        %th.is-vertical-center.is-vertical-center.is-hidden S3 access key
        %th.is-vertical-center.is-hidden S3 secret key

    %tbody
      - @sites.each do |site|
        %tr
          %td.is-vertical-center
            .table-site-name.is-relative
              = link_to site.name, site_pages_path(site)

          %td.is-vertical-center= site.theme
          %td.is-vertical-center.table-actions
            %ul.table-actions__items.is-inline-blocks
              %li.table-actions__item
                = link_to site_pages_path(site), class: "btn btn-default btn-sm table-actions__button" do
                  %i.fa.fa-files-o.fa-lg
              %li.table-actions__item
                = link_to new_site_page_path(site), class: "btn btn-default btn-sm table-actions__button" do
                  %i.fa.fa-plus
                  %i.fa.fa-file-o.fa-lg
              %li.table-actions__item
                = link_to edit_site_path(site), class: "btn btn-default btn-sm table-actions__button" do
                  %i.fa.fa-edit.fa-lg
              %li.table-actions__item
                = link_to deploy_site_path(site), :data => { confirm: 'Are you sure?' }, :method => :post, class: "btn btn-primary btn-sm table-actions__button" do
                  %i.fa.fa-cloud-upload.fa-lg
              %li.table-actions__item
                = link_to site, :data => { confirm: 'Are you sure?' }, :method => :delete, class: "btn btn-danger btn-xstable-actions__button" do
                  %i.fa.fa-trash-o.fa-lg
          %td.is-vertical-center.is-hidden= site.s3_access_key
          %td.is-vertical-center.is-hidden= site.s3_secret_key

